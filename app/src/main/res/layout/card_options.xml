<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="controllerPlayer"
            type="boolean" />

        <variable
            name="count"
            type="int" />

        <variable
            name="mainViewModel"
            type="com.fiz.android.battleinthespace.base.presentation.MainViewModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/materialCardViewOutlinedStyle"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Players_TextView"
                style="@style/TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@{@plurals/count_players(count,count)}"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Players_name_TextView"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/name_options_textview" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name_options_edittext"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Players_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Players_controller_TextView"
                    style="@style/TextViewStyle"
                    android:text="@string/controller" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/Players_ToggleButton"
                    style="@style/ButtonStyle"
                    android:checked="@={controllerPlayer}"
                    android:text="@{controllerPlayer ? @string/controller_options_togglebutton_on : @string/controller_options_togglebutton_off}" />

                <Button
                    android:id="@+id/reset"
                    style="@style/ButtonStyle"
                    android:onClick="@{()->mainViewModel.onClickReset(count)}"
                    android:text="@string/reset" />
            </LinearLayout>


            <TextView
                android:id="@+id/email"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/no_email"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sign_up"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="14sp"
                android:text="@string/signUp" />

            <Button
                android:id="@+id/sign_in"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:text="@string/signIn" />

            <Button
                android:id="@+id/sign_out"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:text="@string/signOut" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>