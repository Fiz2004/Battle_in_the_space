<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/new_game_main_button"
        style="@style/ButtonStyle"
        android:text="@string/new_game_main_button" />

    <Button
        android:id="@+id/options_main_button"
        style="@style/ButtonStyle"
        android:text="@string/options_main_button" />

    <Button
        android:id="@+id/exit_main_button"
        style="@style/ButtonStyle"
        android:text="@string/exit_main_button" />


</LinearLayout>